[
    {
        "method": "get",
        "path": "/",
        "controller": "home.index",
        "middlewares": [
            "auth.validate"
        ]
    },
    {
        "method": "get",
        "path": "/products",
        "controller": "product.index",
        "middlewares": [
            "auth.kick","auth.validate"
        ]
    },
    {
        "method": "post",
        "path": "/products",
        "controller": "product.add",
        "middlewares": [
            "auth.validate"
        ]
    } ,
    {
        "method":"put",
        "path":"/products",
        "controller":"product.update",
        "middlewares": [
            "auth.validate"
        ]
    },
    {
        "method": "get",
        "path": "/products/:id",
        "controller": "product.getProduct",
        "middlewares": [
            "auth.kick","auth.validate"
        ]       
    }   
]